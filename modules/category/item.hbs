<ol>
	{{#each cat}}
	<li class="tree-cat">
		<input type="checkbox" id="{{_id}}"> 
		<div class="list-itm" data-id="{{_id}}" data-name="{{name}}" data-path="{{path}}" data-link="{{link}}">
			<div for="{{_id}}" style="display: inline-block;" class="edit-tree">{{name}} </div>
			<button type="button" class="btn btn-default tree-icon">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			</button>
			<button type="button" class="btn btn-default tree-icon edit-remove">
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
			</button>
		</div> 
		
		{{#if cat}}{{> category_item}}{{/if}}
	</li>
	{{/each}}
</ol>